\usepackage[colorlinks=true,urlcolor=black,linkcolor=black]{hyperref} % allows hyperlinks

\usepackage{fancyhdr} % used primarily for custom first page footer
\renewcommand{\headrulewidth}{0pt} % removes horizontal line at top of document which fancyhdr creates

\usepackage{enumitem} % allows changing of indentation level in lists
\setitemize[0]{leftmargin=10pt} % ... like so
\setdescription[0]{leftmargin=0pt, itemsep=1pt}

\fancypagestyle{firststyle} % create a fancyhdr style used for the first page
{
   \fancyhf{}
   \fancyfoot[C]{\emph{-- Academic Projects on next page --}}
}

% for lists that have no paragraph spacing before or after items
\newenvironment{tight} 
{
	\begin{list}
		{$\bullet$}{\topsep 0pt \itemsep -2pt}}
		{\vspace*{0pt}
	\end{list}
}

% draws a horizontal line under the current document line, used in \header command
\newcommand{\lineunder}
{
	\vspace*{-8pt}\\ 
	\hspace*{-18pt} 
	\hrulefill\\
}

% formatted header (small caps) with line underneath 
\newcommand{\header}[1]
{
	\vspace*{6pt}{\hspace*{-15pt}\vspace*{6pt} 
	\textsc{\large #1}} \vspace*{-6pt} 
	\lineunder \vspace{-12pt}
}

% simple command to ensure all school entries are formatted identically.
\newcommand{\schoolentry}[4]
{
	\noindent\textbf{#1 \hfill GPA: #2/4.00}\\
	\emph{#3 \hfill #4}\vspace{3pt}
}

% creates a generic block consisting of 2 lines: 
% first line:  bold name/title (left side of page), working hyperlink (right side of page)
% second line: unformatted description
\newcommand{\NameUrlTextBlock}[3] {
	\textbf{#1 \hfill \url{#2}}\\
  #3
}

\pagestyle{fancy}
\setlength{\parindent}{0cm}
